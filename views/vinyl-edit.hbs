<h1>Редактировать {{vinyl.title}}</h1>

<form action="/shop/edit" method="post" class="course-form">
    <div class="input-field">
        <input id="title" name="title" type="text" class="validate" required value="{{vinyl.title}}">
        <label for="title">Название пластинки</label>
        <span class="helper-text" data-error="Введите название"></span>
    </div>
    <div class="input-field">
        <input id="price" name="price" type="number" class="validate" required min="1" value="{{vinyl.price}}">
        <label for="price">Цена пластинки</label>
        <span class="helper-text" data-error="Введите цену"></span>
    </div>
    <div class="input-field">
        <input id="image" name="img" type="text" class="validate" required value="{{vinyl.img}}">
        <label for="img">URL фото</label>
        <span class="helper-text" data-error="Введите URL-картинку"></span>
    </div>
    <div class="input-field">
        <textarea id="description" name="description" class="materialize-textarea">{{vinyl.description}}</textarea>
        <label for="description">Введите описание</label>
        <span class="helper-text" data-error="Введите описание"></span>
    </div>

    <input type="hidden" name="_csrf" value="{{csrf}}">
    <input type="hidden" name="id" value="{{vinyl._id}}">

    <button type="submit" class="btn btn-primary">Редактировать пластинку</button>
</form>

<form action="/shop/remove" method="post">

    <input type="hidden" name="id" value="{{vinyl._id}}">
    <input type="hidden" name="_csrf" value="{{csrf}}">

    <button class="btn red">Удалить пластинку</button>
</form>